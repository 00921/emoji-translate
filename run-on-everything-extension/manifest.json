{
  "manifest_version": 2,

  "name" : "Emoji Translate",
  "description" : "Translates english words into magical emoji characters",
  "version" : "1.0.0",

  "permissions": [
    "http://*/*"
  ],

  "icons": {
   "64": "logo.png"
  },

  "web_accessible_resources": [
    "emojis.json"
  ],

  "content_scripts" : [
    {
      "matches" : [ "http://*/*", "https://*/*" ],
      "js" : [ "jquery-2.1.4.min.js", "emoji-translate.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}
